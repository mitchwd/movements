<%= form_for @movement, :html => { :class => "form-horizontal movement" } do |f| %>

    <% if @movement.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@movement.errors.count, "error") %> prohibited this movement from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @movement.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :person_id, options_for_select( Person.all.map{|p| [p.fullname, p.id]} ), {prompt: true}, { class: 'form-control' } %>
    </div>
    <%= error_span(@movement[:person_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :location_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :location_id, options_for_select( Location.all.map{|l| [l.name, l.id]} ), {prompt: true}, { class: 'form-control' } %>
    </div>
    <%= error_span(@movement[:location_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :notes, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :notes, :class => 'form-control' %>
    </div>
    <%= error_span(@movement[:notes]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            movements_path, :class => 'btn btn-default' %>

<% end %>
