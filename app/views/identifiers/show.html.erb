<%- model_class = Identifier -%>
<div class="page-header">
  <h1><%= @identifier.code %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>This code belongs to:</strong></dt>
  <dd><%= link_to @identifier.person.fullname, @identifier.person %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              identifiers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_identifier_path(@identifier), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              identifier_path(@identifier),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
