<%= form_for @identifier, :html => { :class => "form-horizontal identifier" } do |f| %>

    <% if @identifier.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@identifier.errors.count, "error") %> prohibited this identifier from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @identifier.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :person_id, options_for_select( Person.all.map{|p| [p.fullname, p.id]} ), {prompt: true}, { class: 'form-control' } %>
    </div>
    <%= error_span(@identifier[:person_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :code, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :code, :class => 'form-control' %>
    </div>
    <%= error_span(@identifier[:code]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            identifiers_path, :class => 'btn btn-default' %>

<% end %>
